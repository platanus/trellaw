<h1>Activate a law</h1>

<p>Activate <b><%= @law.description %></b> on <b><%= @trello_list.try(:name) || 'Every list' %></b></p>

<%= form_for @board_law do |f| %>
  <%= f.hidden_field :board_id %>
  <%= f.hidden_field :law %>
  <%= f.hidden_field :list_tid %>

  YAML:
  <br>
  <%= f.text_area :settings, cols: 10, rows: 5 %>
  <br>
  <%= f.submit %>
<% end %>
